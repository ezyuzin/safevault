<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <log4net>
        <root>
            <level>INFO</level>
            <appender ref="console" />
            <appender ref="tracelog" />
            <appender ref="errorlog" />
        </root>
        <loggers />
        <appenders>
            <appender name="console"  type="console"/>
            <appender name="tracelog" type="file">
                <level>INFO</level>
                <filename>var/log/trace.log</filename>
            </appender>
            <appender name="errorlog" type="file">
                <level>ERROR</level>
                <filename>var/log/error.log</filename>
            </appender>            
        </appenders>
    </log4net>
</configuration>